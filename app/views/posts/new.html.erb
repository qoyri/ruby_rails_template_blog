<!-- Back Button -->
<div class="mb-8">
  <%= link_to posts_path, class: "inline-flex items-center text-gray-600 hover:text-blue-600 font-medium transition-colors duration-200" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Retour aux articles
  <% end %>
</div>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Créer un nouvel article</h1>
    <p class="text-xl text-gray-600">Partagez vos idées avec la communauté</p>
  </div>

  <!-- Form Container -->
  <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
    <div class="p-8">
      <%= form_with(model: @post, local: true, class: "space-y-8") do |form| %>
        <!-- Error Messages -->
        <% if @post.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-2xl p-6">
            <div class="flex items-center mb-4">
              <svg class="w-6 h-6 text-red-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <h3 class="text-lg font-semibold text-red-800">
                <%= pluralize(@post.errors.count, "erreur") %> trouvée<%= "s" if @post.errors.count > 1 %> :
              </h3>
            </div>
            <ul class="list-disc list-inside text-red-700 space-y-1">
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Title Field -->
        <div>
          <%= form.label :title, "Titre de l'article", class: "block text-lg font-semibold text-gray-900 mb-3" %>
          <%= form.text_field :title, 
              class: "w-full px-6 py-4 text-lg border border-gray-300 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 shadow-sm hover:shadow-md", 
              placeholder: "Donnez un titre accrocheur à votre article...", 
              required: true %>
          <p class="mt-2 text-sm text-gray-600">Choisissez un titre clair et engageant pour votre article.</p>
        </div>

        <!-- Content Field -->
        <div>
          <%= form.label :content, "Contenu de l'article", class: "block text-lg font-semibold text-gray-900 mb-3" %>
          <%= form.text_area :content, 
              class: "w-full px-6 py-4 text-lg border border-gray-300 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 shadow-sm hover:shadow-md resize-none", 
              rows: 12, 
              placeholder: "Rédigez votre article ici...\n\nVous pouvez structurer votre contenu avec des paragraphes, partager vos idées, expériences ou connaissances.", 
              required: true %>
          <p class="mt-2 text-sm text-gray-600">Écrivez votre article en utilisant un langage clair et engageant.</p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <%= form.submit "Publier l'article", 
              class: "inline-flex items-center justify-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1" %>
          
          <%= link_to posts_path, 
              class: "inline-flex items-center justify-center border-2 border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-200 hover:bg-gray-50" do %>
            Annuler
          <% end %>
        </div>

        <!-- Tips Section -->
        <div class="bg-blue-50 border border-blue-200 rounded-2xl p-6 mt-8">
          <h3 class="text-lg font-semibold text-blue-900 mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            Conseils pour un bon article
          </h3>
          <ul class="text-blue-800 space-y-2">
            <li>• Utilisez un titre clair et descriptif</li>
            <li>• Structurez votre contenu avec des paragraphes</li>
            <li>• Partagez vos expériences personnelles</li>
            <li>• Soyez authentique et engageant</li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>