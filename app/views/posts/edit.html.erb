<!-- Back Button -->
<div class="mb-8">
  <%= link_to @post, class: "inline-flex items-center text-gray-600 hover:text-blue-600 font-medium transition-colors duration-200" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Retour à l'article
  <% end %>
</div>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Modifier l'article</h1>
    <p class="text-xl text-gray-600">Apportez les modifications nécessaires à votre article</p>
  </div>

  <!-- Form Container -->
  <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
    <div class="p-8">
      <%= form_with(model: @post, local: true, class: "space-y-8") do |form| %>
        <!-- Error Messages -->
        <% if @post.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-2xl p-6">
            <div class="flex items-center mb-4">
              <svg class="w-6 h-6 text-red-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <h3 class="text-lg font-semibold text-red-800">
                <%= pluralize(@post.errors.count, "erreur") %> trouvée<%= "s" if @post.errors.count > 1 %> :
              </h3>
            </div>
            <ul class="list-disc list-inside text-red-700 space-y-1">
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Title Field -->
        <div>
          <%= form.label :title, "Titre de l'article", class: "block text-lg font-semibold text-gray-900 mb-3" %>
          <%= form.text_field :title, 
              class: "w-full px-6 py-4 text-lg border border-gray-300 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 shadow-sm hover:shadow-md", 
              placeholder: "Donnez un titre accrocheur à votre article...", 
              required: true %>
          <p class="mt-2 text-sm text-gray-600">Choisissez un titre clair et engageant pour votre article.</p>
        </div>

        <!-- Content Field -->
        <div>
          <%= form.label :content, "Contenu de l'article", class: "block text-lg font-semibold text-gray-900 mb-3" %>
          <%= form.text_area :content, 
              class: "w-full px-6 py-4 text-lg border border-gray-300 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 shadow-sm hover:shadow-md resize-none", 
              rows: 12, 
              placeholder: "Rédigez votre article ici...", 
              required: true %>
          <p class="mt-2 text-sm text-gray-600">Écrivez votre article en utilisant un langage clair et engageant.</p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <%= form.submit "Mettre à jour l'article", 
              class: "inline-flex items-center justify-center bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1" %>
          
          <%= link_to @post, 
              class: "inline-flex items-center justify-center bg-gray-100 hover:bg-gray-200 text-gray-700 hover:text-gray-900 px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-200" do %>
            Voir l'article
          <% end %>

          <%= link_to @post, 
              class: "inline-flex items-center justify-center border-2 border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-200 hover:bg-gray-50" do %>
            Annuler
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>